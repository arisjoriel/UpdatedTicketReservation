<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".LogInActivity$PlaceholderFragment"
    android:background="@drawable/neonbg2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/user_name"
        android:id="@+id/username"
        android:layout_weight="0"
        android:layout_marginBottom="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_gravity="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/pass_word"
        android:id="@+id/password"
        android:layout_gravity="left"
        android:layout_alignBottom="@+id/txtPassword"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtUsername"
        android:hint="@string/edit_username"
        android:layout_alignBottom="@+id/username"
        android:layout_toRightOf="@+id/username"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_gravity="right" />

    <EditText
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/txtPassword"
        android:layout_gravity="right"
        android:layout_alignRight="@+id/txtUsername"
        android:layout_alignEnd="@+id/txtUsername"
        android:layout_alignStart="@+id/txtUsername"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:password="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_login"
        android:id="@+id/button"
        android:onClick="logIn"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_below="@+id/password"
        android:layout_alignRight="@+id/txtPassword"
        android:layout_alignEnd="@+id/txtPassword"
        android:layout_marginRight="82dp"
        android:layout_marginTop="46dp"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_signup"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:layout_marginRight="30dp"
        android:clickable="true"
        android:layout_gravity="center" />
</RelativeLayout>
